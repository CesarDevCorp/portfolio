{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"outDir": "./svelte-kit/output",
		"baseUrl": ".",
		"paths": {
			"assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"@content/*": ["src/content/*"],
			"@styles/*": ["src/styles/*"],
			"@stores/*": ["src/stores/*"]
		},
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"ignoreDeprecations": "5.0"
	},
	"include": [
		"./svelte-kit/ambient.d.ts",
		"./svelte-kit/types/**/$types.d.ts",
		"vite.config.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"tests/**/*.js",
		"tests/**/*.ts",
		"tests/**/*.svelte",
		".*.cjs",
		"*.ts",
		"*.js"
	],
	"exclude": [
		"node_modules/**",
		".svelte-kit/[!ambient.d.ts]**",
		"src/service-worker.js",
		"src/service-worker.ts",
		"src/service-worker.d.ts",
		// Excluded because lint errors are tough to debug and files won't change
		"mdsvex.config.mjs",
		"src/lib/codeHighlighter.mjs",
		"svelte.config.js",
		"tailwind.config.cjs"
	]
}
